<div class="ui segment">
    <table class="ui very1 basic collapsing celled table">
        <tbody>
        <tr class="item">
            <td><strong>{{ 'app.admin.ui.modules.university.university.properties.id'|trans }}:</strong></td>
            <td>{{ resource.id }}</td>
        </tr>
        <tr class="item">
            <td><strong>{{ 'app.admin.ui.modules.university.university.properties.created_at'|trans }}:</strong></td>
            <td>{{ resource.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr class="item">
            <td><strong>{{ 'app.admin.ui.modules.university.university.properties.updated_at'|trans }}:</strong></td>
            <td>{{ resource.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr class="item">
            <td><strong>{{ 'app.admin.ui.modules.university.university.properties.description'|trans }}:</strong></td>
            <td style="word-break: break-all;">{{ resource.description }}</td>
        </tr>
        <tr class="item">
            <td><strong>{{ 'app.admin.ui.modules.university.university.properties.max_students'|trans }}:</strong></td>
            <td>{{ resource.maxStudents }}</td>
        </tr>
        <tr class="item">
            <td><strong>{{ 'app.admin.ui.modules.university.university.properties.name'|trans }}:</strong></td>
            <td>{{ resource.name }}</td>
        </tr>
        </tbody>
     </table>
    <div class="ui buttons">
        <a href="{{ path("app_university.university_update", {"id": resource.id} ) }}" class="ui labeled icon button">
            <i class="pencil icon"></i>
            {{ 'app.admin.ui.edit' | trans }}
        </a>
        {% import '@SyliusUi/Macro/buttons.html.twig' as buttons %}
        {{ buttons.delete(path("app_university.university_delete", {"id": resource.id} ), '', true, resource.id) }}
    </div>
    {% if (resource.students) %}
    <p style="margin-top: 1.5rem"><strong>{{ 'app.admin.ui.modules.university.university.relations.students'|trans }}:</strong></p>
    <div style="overflow-x: auto">
    <table class="ui celled table">
        <thead>
        <tr class="center aligned">
            <th>{{ 'app.admin.ui.modules.university.student.properties.id' | trans }}</th>
            <th>{{ 'app.admin.ui.modules.university.student.properties.birth_day' | trans }}</th>
            <th>{{ 'app.admin.ui.modules.university.student.properties.first_name' | trans }}</th>
            <th>{{ 'app.admin.ui.modules.university.student.properties.last_name' | trans }}</th>
            <th>{{ 'app.admin.ui.modules.university.student.properties.middle_name' | trans }}</th>
        </tr>
        </thead>
        <tbody class="left aligned">
        {% for student in resource.students|slice(0,100) %}
            <tr>
                <td>{% include '@university/admin/student/link-to-show.html.twig' with {'data': student} %}</td>
                <td>{{ student.birthDay|date('Y-m-d H:i:s') }}</td>
                <td>{{ student.firstName }}</td>
                <td>{{ student.lastName }}</td>
                <td>{{ student.middleName }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    {% endif %}
</div>